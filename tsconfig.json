{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/pages/Activities.tsx"
    ]
}